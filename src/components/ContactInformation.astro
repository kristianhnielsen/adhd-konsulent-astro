---
import ColumnLayout from "../layouts/ColumnLayout.astro";
import ColumnLayoutImage from "./ColumnLayoutImage.astro";
import Heading2 from "./Heading2.astro";

// Images
import BlockWireToyImg from "../assets/images/square-on-wire.jpg";
import EmailSvg from "../assets/icons/EmailSvg.astro";
import LocationPinSvg from "../assets/icons/LocationPinSvg.astro";
import PersonSvg from "../assets/icons/PersonSvg.astro";
import PhoneSvg from "../assets/icons/PhoneSvg.astro";
---

<ColumnLayout>
  <address
    id="kontakt"
    class="flex w-full flex-col gap-8 not-italic sm:col-span-2"
  >
    <Heading2 transition:name="hvad-er-adhd-title">
      Kontakt information
    </Heading2>
    <p
      class="group flex items-center gap-4 rounded-lg bg-slate-50 p-4 shadow transition-all hover:shadow-lg focus-visible:outline-offset-4 motion-safe:active:outline-offset-0"
    >
      <PersonSvg
        class="w-16 rounded-lg fill-slate-700 p-1 transition-all group-hover:bg-rose-800 group-hover:fill-slate-50 group-focus-visible:bg-rose-800 group-focus-visible:fill-slate-50"
      />
      <span
        class="transition-colors duration-100 group-hover:text-rose-700 group-focus-visible:text-rose-700"
        >Lasse Nielsen</span
      >
    </p>
    <a
      href="https://goo.gl/maps/uLkDGnW7TTNKPpz77"
      class="group flex items-center gap-4 rounded-lg bg-slate-50 p-4 shadow transition-all hover:shadow-lg focus-visible:outline-offset-4 motion-safe:active:outline-offset-0"
    >
      <LocationPinSvg
        class="w-16 rounded-lg fill-slate-700 p-1 transition-all group-hover:bg-rose-800 group-hover:fill-slate-50 group-focus-visible:bg-rose-800 group-focus-visible:fill-slate-50"
      />
      <span
        class="transition-colors duration-100 group-hover:text-rose-700 group-hover:underline group-focus-visible:text-rose-700 group-focus-visible:underline"
        >Bramdrupvej 94, 6040 Egtved</span
      >
    </a>
    <a
      href="mailto:donsen.lassen@hotmail.com"
      class="group flex items-center gap-4 rounded-lg bg-slate-50 p-4 shadow transition-all hover:shadow-lg focus-visible:outline-offset-4 motion-safe:active:outline-offset-0"
    >
      <EmailSvg
        class="w-16 rounded-lg fill-slate-700 p-1 transition-all group-hover:bg-rose-800 group-hover:fill-slate-50 group-focus-visible:bg-rose-800 group-focus-visible:fill-slate-50"
      />
      <span
        class="transition-colors duration-100 group-hover:text-rose-700 group-hover:underline group-focus-visible:text-rose-700 group-focus-visible:underline"
        >donsen.lassen@hotmail.com</span
      >
    </a>
    <a
      href="tel:+4540613102"
      class="group flex items-center gap-4 rounded-lg bg-slate-50 p-4 shadow transition-all hover:shadow-lg focus-visible:outline-offset-4 motion-safe:active:outline-offset-0"
    >
      <PhoneSvg
        class="w-16 rounded-lg fill-slate-700 p-1 transition-all group-hover:bg-rose-800 group-hover:fill-slate-50 group-focus-visible:bg-rose-800 group-focus-visible:fill-slate-50"
      />
      <span
        class="transition-colors duration-100 group-hover:text-rose-700 group-hover:underline group-focus-visible:text-rose-700 group-focus-visible:underline"
        >+45 40 61 31 02</span
      >
    </a>
  </address>
  <ColumnLayoutImage
    src={BlockWireToyImg}
    alt="Legetøj med træklodser på metalsnore"
  />
</ColumnLayout>
